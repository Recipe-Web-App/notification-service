  "version": "0.2.0",
  "configurations": [
    // ========================================================================
    // Django Development Server
    // ========================================================================
    {
      "name": "Django: Run Server (Development)",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/manage.py",
      "args": [
        "runserver",
        "0.0.0.0:8000",
        "--noreload"
      ],
      "django": true,
      "justMyCode": false,
      "envFile": "${workspaceFolder}/.env",
      "env": {
        "DJANGO_SETTINGS_MODULE": "notification_service.settings",
        "PYTHONUNBUFFERED": "1",
        "PYTHONPATH": "${workspaceFolder}"
      },
      "console": "integratedTerminal",
      "stopOnEntry": false,
      "showReturnValue": true,
      "presentation": {
        "hidden": false,
        "group": "django",
        "order": 1
      }
    },
    {
      "name": "Django: Run Server (Test Settings)",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/manage.py",
      "args": [
        "runserver",
        "0.0.0.0:8000",
        "--noreload",
        "--settings=notification_service.settings_test"
      ],
      "django": true,
      "justMyCode": false,
      "envFile": "${workspaceFolder}/.env",
      "env": {
        "DJANGO_SETTINGS_MODULE": "notification_service.settings_test",
        "PYTHONUNBUFFERED": "1",
        "PYTHONPATH": "${workspaceFolder}"
      },
      "console": "integratedTerminal",
      "stopOnEntry": false,
      "showReturnValue": true,
      "presentation": {
        "hidden": false,
        "group": "django",
        "order": 2
      }
    },
    {
      "name": "Django: Run Local (run_local.py)",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/run_local.py",
      "args": [],
      "django": true,
      "justMyCode": false,
      "envFile": "${workspaceFolder}/.env",
      "env": {
        "PYTHONUNBUFFERED": "1",
        "PYTHONPATH": "${workspaceFolder}"
      },
      "console": "integratedTerminal",
      "stopOnEntry": false,
      "showReturnValue": true,
      "presentation": {
        "hidden": false,
        "group": "django",
        "order": 3
      }
    },

