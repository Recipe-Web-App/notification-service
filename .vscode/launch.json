        "DJANGO_SETTINGS_MODULE": "notification_service.settings_test",
        "PYTHONUNBUFFERED": "1",
        "PYTHONPATH": "${workspaceFolder}"
      },
      "console": "integratedTerminal",
      "presentation": {
        "hidden": false,
        "group": "test",
        "order": 1
      }
    },
    {
      "name": "Pytest: Current File",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
