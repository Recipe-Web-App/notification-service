      }
    },

    // ========================================================================
    // Docker Debugging
    // ========================================================================
    {
      "name": "Docker: Attach to Django",
      "type": "debugpy",
      "request": "attach",
      "connect": {
        "host": "localhost",
        "port": 5678
      },
      "pathMappings": [
        {
          "localRoot": "${workspaceFolder}",
          "remoteRoot": "/app"
        }
      ],
      "django": true,
      "justMyCode": false,
      "presentation": {
        "hidden": false,
        "group": "docker",
        "order": 1
      }
    }
  ],
  "compounds": []
}
